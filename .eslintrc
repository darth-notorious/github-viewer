{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"impliedStrict": true,
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"browser": true
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-multi-spaces": 2,
		"quotes": [ 2, "single", { "allowTemplateLiterals": true } ],
		"space-before-blocks": [ 2, "always" ],
		"space-in-parens": [ 2, "always" ],
		"one-var": [ 2, { "initialized": "never", "uninitialized": "always" } ],
		"object-curly-spacing":  [ 2, "always" ],
		"object-curly-newline": [ 1, { "minProperties": 2, "multiline": true } ],
		"no-mixed-spaces-and-tabs": 2,
		"max-nested-callbacks": [ 2, 3 ],
		"keyword-spacing": 2,
		"jsx-quotes": [ 2, "prefer-single" ],
		"indent": [ "error", 4, { "SwitchCase": 1 } ],
		"computed-property-spacing": [ 2, "always"],
		"comma-spacing": 2,
		"comma-dangle": [ 1, { "objects": "always-multiline" } ],
		"array-bracket-spacing": [ 2, "always" ],
		"arrow-parens" : [ 2, "as-needed" ],
		"arrow-spacing": [ 2, { "before": true, "after": true } ],
		"no-var": 2,
		"prefer-const": 1,
		"template-curly-spacing": [ 1, "always" ],
		"no-unused-vars": [ 2, { "args": "none" } ],
		"curly": [ 1, "multi-or-nest" ],
		"complexity": [ 1, 4],
		"no-extra-semi": 2,
		"valid-typeof": 2,
		"react/jsx-no-bind": [ 2, { "allowArrowFunctions": true } ],
		"react/jsx-uses-vars": 1,
		"react/jsx-uses-react": 1,
		"react/jsx-first-prop-new-line": [ 2, "always"],
		"react/jsx-max-props-per-line": 1,
		"react/jsx-indent-props": [ 2, 4 ],
		"react/jsx-key": 1,
		"react/jsx-no-duplicate-props": [ 1, { "ignoreCase": true } ],
		"no-useless-escape": 1,
		"padded-blocks": [ 2, { "classes": "always", "blocks": "never", "switches": "never" } ]
	}
}